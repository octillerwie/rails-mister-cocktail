<div class="container mt-5">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
  <%= image_tag "https://images.unsplash.com/photo-1529395884055-d0c30cc5ba70?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60", alt: "placeholde" %>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'ðŸ—‘', dose_path(dose), method: :delete %></p>
  <% end %>
  <h2>Reviews</h2>
  <% @cocktail.reviews.each do |review| %>
  <p><%= review.content %> - <%= review.rating %>/5 </p>
  <% end %>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
  <%= link_to 'Back to cocktails', cocktails_path %>
  <%= link_to 'Leave a review', new_cocktail_review_path(@cocktail) %>
</div>
